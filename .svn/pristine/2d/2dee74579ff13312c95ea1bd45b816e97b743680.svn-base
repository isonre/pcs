<?xml version="1.0" encoding="UTF-8"?>
  <modeltable id="testTable" width="100%" height="100%" tableName="B_ANALYSIS" dataSource="oracle">
      <view><![CDATA[
        select rownum,
          c.*
          from (
          select
            distinct
            b.crop_name,
            avg(b.price) over(partition by to_char(b.time, 'YYYY-MM-DD'),b.crop_name) as avgPrice,
            sum(b.volume) over(partition by to_char(b.time, 'YYYY'),b.crop_name) as totalSale,
            pre.avgPrice as preAvgPrice,
            (avg(b.price) over(partition by to_char(b.time, 'YYYY-MM-DD'),b.crop_name) - pre.avgPrice)/pre.avgPrice as changeRandge,                
            b.unit,
            b.market,
            b.information,
            to_char(b.time, 'YYYY-MM-DD') as tt
         from B_ANALYSIS b,(
            select
              crop_name,  
              to_char(time, 'YYYY-MM-DD') as tt,
              avg(price) as avgPrice
            from B_ANALYSIS
            where  
              market = '#{market}'
            group by
              crop_name,
              to_char(time, 'YYYY-MM-DD')
          ) pre
          where 
            market = '#{market}' and
            b.crop_type = '#{ctype}' and
            b.crop_name = pre.crop_name and
            to_char(b.time-1, 'YYYY-MM-DD') = pre.tt
          ) c
        where c.tt = '#{cdate}'
        order by c.changeRandge desc
      ]]>
      </view>
      <target name="rownum" dataType="num"  label="序号">rownum</target>
      <target name="cropName" dataType="str" label="名称">crop_name</target>
      <target name="avgPrice" dataType="num" label="本日平均价格" format=".##" sort="true">avgPrice</target>
      <target name="preAvgPrice" dataType="num" label="上日平均价格" format=".##" sort="true">preAvgPrice</target>
      <target name="changeRandge" dataType="num" label="涨跌幅度" format="##%" sort="true">changeRandge</target>
      <target name="totalSale" dataType="num" label="销量" format=".##" sort="true">totalSale</target>
      <target name="unit" dataType="str" label="计量单位">unit</target>
      <target name="information" dataType="num" label="信息来源">information</target>
  </modeltable>